function checkPass(){
if(document.getElementById('pass').value==='BABY') go(1);
else alert('Wrong Password');
}

function go(num){
let allPages=document.querySelectorAll('.page');
allPages.forEach(p=>p.classList.remove('active'));
document.getElementById('page'+num).classList.add('active');

// Music control
let s4=document.getElementById('song4');
let s5=document.getElementById('bgMusic5');
let s6=document.getElementById('song6');
// Pause all first
s4.pause(); s5.pause(); s6.pause();
if(num===4) s4.play().catch(()=>{});
if(num===5) s5.play().catch(()=>{});
if(num===6) s6.play().catch(()=>{});
}

let opened=0;
document.querySelectorAll('.name-box').forEach(box=>{
box.addEventListener('click',()=>{
if(!box.classList.contains('open')){
box.classList.add('open');
box.innerHTML=box.dataset.name;
opened++;
if(opened===6) document.getElementById('next3').style.display='block';
}
});
});

function showLove(){
document.getElementById('loveText').innerHTML='Well.This is my day 361 and still tumi amar kothao to theke gecho.Akhon tumar nam sunlei kn jani sojjo hoi na.life e kaoke ato valobashini except you.she kotha vablei nijeke hate kori.Chi amar mon kototai Rochihin.Sorry to Say tumi akhon jodi kono pular suiyeo thako I Don\'t fucking care.';
for(let i=0;i<30;i++){
let h=document.createElement('div');
h.className='heart';
h.style.left=Math.random()*100+'%';
h.innerHTML='‚ù§Ô∏è';
document.body.appendChild(h);
setTimeout(()=>h.remove(),3000);
}
}
